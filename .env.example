# =============================================================================
# n8n-nodes-aem-ops Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# AEM 6.5 Author Instance
# -----------------------------------------------------------------------------
# Base URL of your AEM Author instance (no trailing slash)
AEM_AUTHOR_BASE_URL=http://localhost:4502

# Authentication method: 'basic' or 'bearer'
AEM_AUTH_METHOD=basic

# Basic Auth credentials (if using basic auth)
AEM_USERNAME=admin
AEM_PASSWORD=admin

# Bearer token (if using bearer auth)
# AEM_BEARER_TOKEN=your-bearer-token-here

# Allow insecure TLS connections (development only - NEVER use in production)
AEM_INSECURE_TLS=false

# Enable CSRF token handling for POST requests
AEM_CSRF_ENABLED=true

# -----------------------------------------------------------------------------
# AEM Dispatcher / CDN Settings
# -----------------------------------------------------------------------------
# Allowlist regex for cache purge URLs (security measure)
# Example: Only allow purging URLs under your domain
CACHE_PURGE_ALLOWLIST_REGEX=^https?://.*\.example\.com/.*$

# -----------------------------------------------------------------------------
# Safety Settings
# -----------------------------------------------------------------------------
# Default batch size for bulk operations
DEFAULT_BATCH_SIZE=10

# Default throttle between requests in milliseconds
DEFAULT_THROTTLE_MS=100

# Default dry-run mode (true = no actual changes made)
DEFAULT_DRY_RUN=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Redact sensitive data in logs (always true in production)
REDACT_SENSITIVE_DATA=true

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
# Path to n8n custom extensions (used when installing locally)
# N8N_CUSTOM_EXTENSIONS=/path/to/n8n-nodes-aem-ops/dist

# n8n data directory (for credentials storage)
# N8N_USER_FOLDER=~/.n8n
